---
export interface Props {
  title: string;
  description: string;
  features: string[];
  duration: string;
  difficulty: string;
}

const { title, description, features, duration, difficulty } = Astro.props;
---

<div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 hover:bg-white/15 transition-all duration-300 hover:transform hover:-translate-y-2 hover:shadow-2xl group">
  <div class="flex justify-between items-start mb-4">
    <h3 class="text-xl font-bold text-primary group-hover:text-ice-blue transition-colors">
      {title}
    </h3>
    <div class="text-right text-sm text-white/70">
      <div class="font-medium">{duration}</div>
      <div class="text-xs">{difficulty}</div>
    </div>
  </div>
  
  <p class="text-white/90 mb-4 leading-relaxed">
    {description}
  </p>
  
  <ul class="space-y-2">
    {features.map((feature) => (
      <li class="flex items-center text-sm text-white/80">
        <svg class="w-4 h-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
        </svg>
        {feature}
      </li>
    ))}
  </ul>
  
  <div class="mt-6 pt-4 border-t border-white/20">
    <a 
      href="#booking" 
      class="inline-block w-full text-center bg-primary/20 text-primary border border-primary px-4 py-2 rounded-lg font-medium hover:bg-primary hover:text-black transition-all duration-300"
    >
      Book This Adventure
    </a>
  </div>
</div>
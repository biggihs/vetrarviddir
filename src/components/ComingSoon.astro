---
export interface Props {
  title: string;
  message: string;
  icon?: string;
  contactCta?: boolean;
}

const { title, message, icon = "ðŸš§", contactCta = false } = Astro.props;
---

<div class="bg-white/10 backdrop-blur-sm rounded-xl p-8 border border-white/20 text-center">
  <div class="text-6xl mb-4 animate-bounce">{icon}</div>
  <h3 class="text-2xl font-bold text-primary mb-4">{title}</h3>
  <p class="text-white/80 text-lg mb-6 leading-relaxed max-w-md mx-auto">{message}</p>
  
  <div class="flex flex-col sm:flex-row gap-3 justify-center">
    <span class="inline-block bg-gradient-to-r from-primary to-secondary-cyan text-white px-6 py-2 rounded-full text-sm font-medium">
      Coming Soon
    </span>
    
    {contactCta && (
      <a 
        href="#contact" 
        class="inline-block bg-white/20 text-white px-6 py-2 rounded-full text-sm font-medium hover:bg-white/30 transition-colors"
      >
        Contact Us Instead
      </a>
    )}
  </div>
  
  <!-- Progress indicator -->
  <div class="mt-6">
    <div class="w-full bg-white/10 rounded-full h-2">
      <div class="bg-gradient-to-r from-primary to-secondary-cyan h-2 rounded-full animate-pulse" style="width: 65%"></div>
    </div>
    <p class="text-white/60 text-sm mt-2">Development in progress...</p>
  </div>
</div>

<style>
  @keyframes pulse {
    0%, 100% {
      width: 60%;
    }
    50% {
      width: 70%;
    }
  }
</style>
---
// Import features config to check what sections are enabled
const { FEATURES, HIDE_COMPLETELY } = await import('../config/features.ts');

// Helper function to check if a section should be shown in navigation
const shouldShowInNav = (feature: string) => {
  const isEnabled = FEATURES[feature as keyof typeof FEATURES];
  const isHidden = HIDE_COMPLETELY.includes(feature as any);
  
  // Show in nav if enabled, or if disabled but not completely hidden (shows "coming soon")
  return isEnabled || !isHidden;
};
---

<nav id="nav" class="fixed top-0 w-full z-50 transition-all duration-300 bg-transparent">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold text-white hover:text-primary transition-colors">
          Vetrarv√≠ddir
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#home" class="text-white hover:text-primary px-3 py-2 text-sm font-medium transition-colors">Home</a>
          {shouldShowInNav('about') && (
            <a href="#about" class="text-white hover:text-primary px-3 py-2 text-sm font-medium transition-colors">About</a>
          )}
          {shouldShowInNav('services') && (
            <a href="#services" class="text-white hover:text-primary px-3 py-2 text-sm font-medium transition-colors">Services</a>
          )}
          {shouldShowInNav('videos') && (
            <a href="#videos" class="text-white hover:text-primary px-3 py-2 text-sm font-medium transition-colors">Videos</a>
          )}
          {shouldShowInNav('contact') && (
            <a href="#contact" class="text-white hover:text-primary px-3 py-2 text-sm font-medium transition-colors">Contact</a>
          )}
          {shouldShowInNav('booking') && (
            <a href="#booking" class="bg-primary text-black px-4 py-2 rounded-md text-sm font-medium hover:bg-ice-blue transition-colors">
              Book Trip
            </a>
          )}
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          onclick="toggleMobileMenu()"
          class="inline-flex items-center justify-center p-2 rounded-md text-white hover:text-primary focus:outline-none"
        >
          <svg id="hamburger" class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
            <path class="inline-block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-black/90 backdrop-blur-lg rounded-lg mt-2">
        <a href="#home" class="text-white hover:text-primary block px-3 py-2 text-base font-medium">Home</a>
        {shouldShowInNav('about') && (
          <a href="#about" class="text-white hover:text-primary block px-3 py-2 text-base font-medium">About</a>
        )}
        {shouldShowInNav('services') && (
          <a href="#services" class="text-white hover:text-primary block px-3 py-2 text-base font-medium">Services</a>
        )}
        {shouldShowInNav('videos') && (
          <a href="#videos" class="text-white hover:text-primary block px-3 py-2 text-base font-medium">Videos</a>
        )}
        {shouldShowInNav('contact') && (
          <a href="#contact" class="text-white hover:text-primary block px-3 py-2 text-base font-medium">Contact</a>
        )}
        {shouldShowInNav('booking') && (
          <a href="#booking" class="bg-primary text-black block px-3 py-2 rounded-md text-base font-medium hover:bg-ice-blue">
            Book Trip
          </a>
        )}
      </div>
    </div>
  </div>
</nav>